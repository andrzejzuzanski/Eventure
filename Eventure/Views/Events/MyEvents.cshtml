@model Eventure.ViewModels.MyEventsViewModel

@{
    ViewData["Title"] = "My Events";
}

<link rel="stylesheet" href="~/css/events/MyEvents.css">

<div class="myevents-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">My Events</h1>
        <div class="accent-line"></div>
        <p class="page-subtitle">Overview of all your events</p>
    </div>

    <!-- Statistics -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-number">@Model.OrganizedEvents.Count()</div>
            <div class="stat-label">Organized</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@Model.JoinedEvents.Count()</div>
            <div class="stat-label">I am participating</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@(Model.OrganizedEvents.Count() + Model.JoinedEvents.Count())</div>
            <div class="stat-label">Total</div>
        </div>
    </div>

    <!-- Organized Events -->
    <div class="events-section">
        <h2 class="section-title organizer-title">
            <i class="bi bi-star"></i>
            Events as an organizer
        </h2>

        @if (Model.OrganizedEvents.Any())
        {
            @foreach (var ev in Model.OrganizedEvents)
            {
                <div class="event-item">
                    <div class="event-main-info">
                        <a asp-action="Details" asp-route-id="@ev.Id" class="event-title-link">
                            @ev.Title
                        </a>
                        <div class="event-meta">
                            <div class="event-date">
                                <i class="bi bi-calendar-event"></i>
                                <span>@ev.StartDateTime.ToString("g")</span>
                            </div>
                            <div class="event-organizer">
                                <i class="bi bi-geo-alt"></i>
                                <span>@(ev.Location ?? "Online")</span>
                            </div>
                        </div>
                    </div>
                    <div class="event-status">
                        @{
                            var now = DateTime.Now;
                            var status = "upcoming";
                            var statusText = "Upcoming";
                            var statusClass = "status-upcoming";

                            if (now >= ev.StartDateTime && now <= ev.EndDateTime)
                            {
                                status = "ongoing";
                                statusText = "Ongoing";
                                statusClass = "status-ongoing";
                            }
                            else if (now > ev.EndDateTime)
                            {
                                status = "finished";
                                statusText = "Finished";
                                statusClass = "status-finished";
                            }
                        }
                        <span class="status-badge @statusClass">@statusText</span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-calendar-plus"></i>
                <h4>You haven't organized any events yet.</h4>
                <p>It's time to take the first step! Create an event and share your passion with the world.</p>
                <a asp-action="Create" class="create-event-btn">
                    <i class="bi bi-plus-circle"></i>
                    Create your first event
                </a>
            </div>
        }
    </div>

    <!-- Joined Events -->
    <div class="events-section">
        <h2 class="section-title participant-title">
            <i class="bi bi-people"></i>
            Events you participate in
        </h2>

        @if (Model.JoinedEvents.Any())
        {
            @foreach (var ev in Model.JoinedEvents)
            {
                <div class="event-item">
                    <div class="event-main-info">
                        <a asp-action="Details" asp-route-id="@ev.Id" class="event-title-link">
                            @ev.Title
                        </a>
                        <div class="event-meta">
                            <div class="event-date">
                                <i class="bi bi-calendar-event"></i>
                                <span>@ev.StartDateTime.ToString("g")</span>
                            </div>
                            <div class="event-organizer">
                                <i class="bi bi-person"></i>
                                <span>@ev.Organizer?.UserName</span>
                            </div>
                            <div class="event-organizer">
                                <i class="bi bi-geo-alt"></i>
                                <span>@(ev.Location ?? "Online")</span>
                            </div>
                        </div>
                    </div>
                    <div class="event-status">
                        @{
                            var now = DateTime.Now;
                            var status = "upcoming";
                            var statusText = "Upcomming";
                            var statusClass = "status-upcoming";

                            if (now >= ev.StartDateTime && now <= ev.EndDateTime)
                            {
                                status = "ongoing";
                                statusText = "Ongoing";
                                statusClass = "status-ongoing";
                            }
                            else if (now > ev.EndDateTime)
                            {
                                status = "finished";
                                statusText = "Finished";
                                statusClass = "status-finished";
                            }
                        }
                        <span class="status-badge @statusClass">@statusText</span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-calendar-check"></i>
                <h4>You are not participating in any event</h4>
                <p>Discover exciting events in your area and join the community!</p>
                <a asp-action="Index" class="create-event-btn">
                    <i class="bi bi-search"></i>
                    Explore events
                </a>
            </div>
        }
    </div>
</div>
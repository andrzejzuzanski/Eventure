@using Eventure.Helpers
@model PaginatedList<Eventure.Models.Event>

@{
    ViewData["Title"] = "Nadchodzące Wydarzenia";
}

<link rel="stylesheet" href="~/css/events/Index.css">

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="text-center">
            <h1 class="hero-title display-4">Odkryj Wydarzenia</h1>
            <div class="accent-line"></div>
            <p class="hero-subtitle">Znajdź inspirujące spotkania, warsztaty i konferencje w Twojej okolicy</p>
        </div>
    </div>
</section>

<div class="container">
    <form method="get" class="filter-form">
        <div class="row g-3">
            <div class="col-md-3">
                <input name="searchTitle" class="form-control" placeholder="Szukaj po tytule..." value="@Context.Request.Query["searchTitle"]" />
            </div>
            <div class="col-md-2">
                <input name="location" class="form-control" placeholder="Lokalizacja..." value="@Context.Request.Query["location"]" />
            </div>
            <div class="col-md-2">
                <input name="startDate" type="date" class="form-control" value="@Context.Request.Query["startDate"]" />
            </div>
            <div class="col-md-3">
                <select name="categoryId" class="form-select" asp-items="(IEnumerable<SelectListItem>)ViewBag.Categories">
                    <option value="">Wszystkie kategorie</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtruj</button>
            </div>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-calendar-x display-1 text-muted mb-3"></i>
            <h3>Nie znaleziono wydarzeń</h3>
            <p>Spróbuj zmienić filtry lub sprawdź ponownie później</p>
            <a asp-action="Index" class="btn btn-secondary">Wyczyść filtry</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card event-card h-100">
                        <div class="position-relative overflow-hidden">
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <img src="@(item.ImageUrl ?? "/uploads/events/default-event.png")"
                                     class="card-img-top"
                                     alt="@item.Title"
                                     style="height: 200px; object-fit: cover;">
                            </a>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-3">@item.Title</h5>
                            <p class="card-text flex-grow-1 mb-3">
                                @(item.Description != null && item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="info-item">
                                    <i class="bi bi-calendar-event"></i>
                                    <span>@item.StartDateTime.ToString("dd MMMM yyyy, HH:mm")</span>
                                </div>
                                <div class="info-item mb-3">
                                    <i class="bi bi-geo-alt"></i>
                                    <span>@(item.Location ?? "Online")</span>
                                </div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary w-100">
                                    Zobacz szczegóły
                                </a>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-circle me-2"></i>
                                <span>@item.Organizer?.UserName</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <nav aria-label="Nawigacja stron">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchTitle="@Context.Request.Query["searchTitle"]"
                       asp-route-location="@Context.Request.Query["location"]"
                       asp-route-startDate="@Context.Request.Query["startDate"]"
                       asp-route-categoryId="@Context.Request.Query["categoryId"]">
                        Poprzednia
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Poprzednia</span>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">@Model.PageIndex</span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchTitle="@Context.Request.Query["searchTitle"]"
                       asp-route-location="@Context.Request.Query["location"]"
                       asp-route-startDate="@Context.Request.Query["startDate"]"
                       asp-route-categoryId="@Context.Request.Query["categoryId"]">
                        Następna
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Następna</span>
                </li>
            }
        </ul>
    </nav>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center mb-5">
            <a class="btn create-btn" asp-action="Create">
                Stwórz Nowe Wydarzenie
            </a>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.documentElement.style.scrollBehavior = 'smooth';

        const inputs = document.querySelectorAll('.form-control, .form-select');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.style.transform = 'translateY(-1px)';
            });

            input.addEventListener('blur', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>
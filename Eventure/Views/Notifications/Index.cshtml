@model List<Eventure.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}

<link rel="stylesheet" href="~/css/Notifications/Index.css" />

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="text-center">
            <h1 class="hero-title display-4">Notifications</h1>
            <div class="accent-line"></div>
            <p class="hero-subtitle">Stay up to date with the most important information</p>
        </div>
    </div>
</section>

<div class="notifications-container">
    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-bell-slash"></i>
            </div>
            <h3>No notifications</h3>
            <p>When new notifications appear, you will find them here. Check regularly so you don't miss out on important event information!</p>
        </div>
    }
    else
    {
        @foreach (var n in Model)
        {
            <div class="notification-card @(n.IsRead ? "" : "unread")">
                <div class="notification-body">
                    <div class="notification-header">
                        <div class="notification-icon">
                            <i class="bi @(n.IsRead ? "bi-check-circle" : "bi-bell")"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-message">
                                @n.Message
                            </div>
                            <div class="notification-time">
                                <i class="bi bi-clock"></i>
                                @n.CreatedAt.ToLocalTime().ToString("dd MMMM yyyy, HH:mm")
                            </div>
                        </div>
                    </div>

                    @if (!n.IsRead)
                    {
                        <div class="notification-actions">
                            <form asp-action="MarkAsRead" asp-route-id="@n.Id" method="post" class="d-inline">
                                <button class="btn btn-mark-read">
                                    <i class="bi bi-check me-1"></i>Mark as read
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.documentElement.style.scrollBehavior = 'smooth';

        const markButtons = document.querySelectorAll('.btn-mark-read');
        markButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                const card = this.closest('.notification-card');
                card.style.opacity = '0.6';
                card.style.transform = 'scale(0.98)';
            });
        });
    });
</script>
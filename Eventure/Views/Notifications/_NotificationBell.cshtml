@model int

<a class="nav-link position-relative d-inline-flex align-items-center" asp-controller="Notifications" asp-action="Index">
    <i class="bi bi-bell fs-5"></i>

    @if (Model > 0)
    {
        <span class="position-absolute badge rounded-pill bg-danger"
              style="top: 5px; right: -10px; font-size: 0.7rem; padding: 2px 6px;">
            @Model
            <span class="visually-hidden">nieprzeczytane powiadomienia</span>
        </span>
    }
</a>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eventure</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Eventure.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css"/>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand">
                    <i class="bi bi-calendar-event me-2"></i>Eventure
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">
                                <i class="bi bi-calendar-check me-1"></i>Wydarzenia
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Calendar">
                                <i class="bi bi-calendar3 me-1"></i>Kalendarz
                            </a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Events" asp-action="Create">
                                    <i class="bi bi-plus-circle me-1"></i>Utwórz
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Events" asp-action="MyEvents">
                                    <i class="bi bi-person-workspace me-1"></i>Moje wydarzenia
                                </a>
                            </li>

                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-check me-1"></i>Panel Admina
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item" id="messages-badge">
                                <span class="nav-link disabled">
                                    <i class="bi bi-hourglass-split"></i>
                                </span>
                            </li>
                            <li class="nav-item" id="notification-bell">
                                <span class="nav-link disabled">
                                    <i class="bi bi-hourglass-split"></i>
                                </span>
                            </li>
                        </ul>
                    }

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content with proper flexbox layout -->
    <main class="flex-shrink-0" style="margin-top: 85px;">
        @RenderBody()

        @if (TempData["Message"] != null)
        {
            var type = TempData["MessageType"]?.ToString() ?? "info";
            <div class="container">
                <div class="alert alert-@type alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-@(type == "success" ? "check-circle" : type == "warning" ? "exclamation-triangle" : type == "danger" ? "x-circle" : "info-circle") me-2"></i>
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
                </div>
            </div>
        }
    </main>

    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start">
                    &copy; 2025 - Eventure
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="me-3">
                        <i class="bi bi-shield-lock me-1"></i>Prywatność
                    </a>
                    <a href="#" class="text-muted">
                        Andrzej Zuzański 2025
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/9.0.6/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Enhanced loading states
            const notificationBell = document.getElementById("notification-bell");
            const messagesBadge = document.getElementById("messages-badge");

            // Load notifications with error handling
            fetch('/Notifications/UnreadCount')
                .then(response => {
                    if (!response.ok) throw new Error('Network response was not ok');
                    return response.text();
                })
                .then(html => {
                    if (notificationBell) {
                        notificationBell.innerHTML = html;
                        notificationBell.style.opacity = '0';
                        notificationBell.style.transition = 'opacity 0.3s ease';
                        setTimeout(() => notificationBell.style.opacity = '1', 100);
                    }
                })
                .catch(error => {
                    console.error('Error loading notifications:', error);
                    if (notificationBell) {
                        notificationBell.innerHTML = '<a class="nav-link" title="Powiadomienia"><i class="bi bi-bell text-muted"></i></a>';
                    }
                });

            // Load messages with error handling
            fetch('/Messages/UnreadCount')
                .then(response => {
                    if (!response.ok) throw new Error('Network response was not ok');
                    return response.text();
                })
                .then(html => {
                    if (messagesBadge) {
                        messagesBadge.innerHTML = html;
                        messagesBadge.style.opacity = '0';
                        messagesBadge.style.transition = 'opacity 0.3s ease';
                        setTimeout(() => messagesBadge.style.opacity = '1', 100);
                    }
                })
                .catch(error => {
                    console.error('Error loading messages:', error);
                    if (messagesBadge) {
                        messagesBadge.innerHTML = '<a class="nav-link" title="Wiadomości"><i class="bi bi-envelope text-muted"></i></a>';
                    }
                });

            // Smooth scroll behavior
            document.documentElement.style.scrollBehavior = 'smooth';

            // Enhanced navbar behavior on scroll
            let lastScrollTop = 0;
            const navbar = document.querySelector('.navbar');

            window.addEventListener('scroll', function() {
                let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (scrollTop > lastScrollTop && scrollTop > 100) {
                    navbar.style.transform = 'translateY(-100%)';
                } else {
                    navbar.style.transform = 'translateY(0)';
                }
                lastScrollTop = scrollTop;
            });

            // Auto-dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
</html>
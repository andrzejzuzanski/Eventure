@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<link rel="stylesheet" href="~/css/account/Manage.css" />

<div class="manage-container">
    <div class="manage-card">
        <div class="manage-header">
            <h1 class="manage-title">Set Your Password</h1>
            <div class="accent-line"></div>
            <p class="manage-subtitle">Create a local account password</p>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="form-section">
            <p class="text-info">
                <i class="bi bi-info-circle me-2"></i>
                You do not have a local username/password for this site. Add a local account so you can log in without an external login.
            </p>
        </div>

        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-section">
                <div class="form-floating">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Please enter your new password." />
                    <label asp-for="Input.NewPassword" class="form-label"></label>
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-section">
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Please confirm your new password." />
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-section">
                <button type="submit" class="w-100 btn btn-lg btn-primary">
                    <i class="bi bi-key me-2"></i>Set Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
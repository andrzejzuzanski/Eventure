@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<link rel="stylesheet" href="~/css/account/Manage.css" />

<div class="manage-container">
    <div class="manage-card">
        <div class="manage-header">
            <h1 class="manage-title">User Profile</h1>
            <div class="accent-line"></div>
            <p class="manage-subtitle">Manage your account information</p>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="row">
            <div class="col-md-6">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-section">
                        <div class="form-floating">
                            <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
                            <label asp-for="Input.UserName" class="form-label"></label>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-section">
                        <label asp-for="Input.ProfilePicture" class="form-label">Profile Picture</label>
                        <input asp-for="Input.ProfilePicture" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                        <small class="text-muted">Select a photo that represents you best.</small>
                    </div>

                    <div class="form-section">
                        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">
                            <i class="bi bi-person-check me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <div class="profile-image-section">
                    <label class="form-label mb-3">Current Profile Picture</label>
                    @if (!string.IsNullOrEmpty(Model.CurrentProfilePictureUrl))
                    {
                        <img src="@Model.CurrentProfilePictureUrl" alt="Profile photo" class="profile-image" />
                    }
                    else
                    {
                        <img src="~/uploads/avatars/default-avatar.png" alt="Default avatar" class="profile-image" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration confirmation";
}

<link rel="stylesheet" href="~/css/Account/auth-styles.css" />

<div class="confirmation-card">
    <div class="auth-header">
        <h1 class="auth-title">Welcone in Eventure!</h1>
        <div class="accent-line"></div>
    </div>

    <div class="alert alert-success" role="alert">
        <div class="text-center mb-4">
            <i class="bi bi-envelope-heart display-1 text-success"></i>
        </div>

        <h4 class="alert-heading text-center">Thank you for signing up!</h4>

        <p class="text-center mb-3">
            We have sent an activation link to your email address <strong>@Model.Email</strong>.
        </p>

        <hr class="my-4">

        <div class="text-center">
            <p class="mb-4">
                <i class="bi bi-info-circle me-2"></i>
                Check your inbox (and spam folder!) and click on the link
                to fully activate your account and log in.
            </p>

            <div class="d-flex flex-column gap-3">
                <a asp-page="./Login" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Go to login page
                </a>

                <a asp-page="./ResendEmailConfirmation" class="btn btn-outline-primary">
                    <i class="bi bi-envelope-arrow-up me-2"></i>
                    Resend email
                </a>
            </div>
        </div>
    </div>

    <div class="auth-links mt-4">
        <div class="text-center">
            <small class="text-muted">
                <i class="bi bi-clock me-1"></i>
                The activation link is valid for 24 hours.
            </small>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const icon = document.querySelector('.bi-envelope-heart');

        setTimeout(() => {
            icon.style.animation = 'pulse 2s infinite';
        }, 1000);

        const buttons = document.querySelectorAll('.btn');
        buttons.forEach(button => {
            button.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px) scale(1.02)';
            });

            button.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        setTimeout(() => {
            const primaryBtn = document.querySelector('.btn-primary');
            if (primaryBtn) {
                primaryBtn.focus();
            }
        }, 2000);
    });
</script>